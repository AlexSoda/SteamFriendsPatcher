        <Button x:Name="toggleScanButton" Content="Start Scanning" Margin="10,0,0,10" Background="#FF3D3D3E" Foreground="White" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="ToggleScanButton_Click" Padding="10,1"/>
        <Button x:Name="settingsButton" Content="&#xE115;" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="32" FontFamily="Segoe UI Symbol" Background="#00DDDDDD" Foreground="White" Height="32" FontSize="24" BorderThickness="0" Margin="0,0,10,10" Click="SettingsButton_Click"/>
        <Button x:Name="forceCheckButton" Content="Force Check" HorizontalAlignment="Left" Margin="155,0,0,10" VerticalAlignment="Bottom" Background="#FF3D3D3E" Foreground="White" FontSize="18" Padding="10,1" Click="ForceCheckButton_Click"/>
    </Grid>
</Window>